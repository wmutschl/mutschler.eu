% =========================================================================
% Declare endogenous variables
% =========================================================================
var
  x        ${X}$           (long_name='ARMA(1,1) Process')
;

% =========================================================================
% Declare exogenous variables
% =========================================================================
varexo
  e        ${\varepsilon}$ (long_name='White Noise Process')
;

% =========================================================================
% Declare parameters
% =========================================================================
parameters
  THETA_1  ${\theta_1}$    (long_name='AR parameter')
  THETA_2  ${\theta_2}$    (long_name='MA parameter')
;

% =========================================================================
% Calibrate parameter values
% =========================================================================
THETA_1=0.4;
THETA_2=0.4;

% =========================================================================
% Model equations
% =========================================================================
model;
[name='ARMA(1,1)']
x - THETA_1*x(-1) = e - THETA_2*e(-1);
end;

% =========================================================================
% Steady State Model
% =========================================================================
steady_state_model;
x = 0;
end;

% =========================================================================
% Declare settings for shocks
% =========================================================================
shocks;
var e = 1;
end;

% =========================================================================
% Computations
% =========================================================================
steady;
check;

stoch_simul(order=1,periods=150,drop=50,irf=0);

options_.rplottype=2;
options_.TeX = 1;
rplot x e;

varobs x;
identification;

if isequal(oo_.exo_simul,x)
    fprintf('x and e are equal\n');
end

